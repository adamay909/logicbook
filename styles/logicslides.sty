%**********************************
%	SYMBOLS
%**********************************
%
%therefore
\def\ltherefore{\ensuremath{\ensuremath{\therefore}}}

%negation
\def\lnot{\ensuremath{\neg}} 

%disjunction
\def\lor{\ensuremath{\mathrel\vee}}

%conjunction
\def\land{\ensuremath{\mathrel\wedge}}

%material implication
\def\limplies{\ensuremath{\supset}}

%material bi-conditional
\def\liff{\ensuremath{\leftrightarrow}}

%NAND
\def\lnand{\ensuremath{\uparrow}}

%NOR
\def\lnor{\ensuremath{\downarrow}}

%universal quantifier
\def\lforall{\ensuremath{\forall}}

%existential quantifier
\def\lthereis{\ensuremath{\exists}}

%derivable
\def\lproves{\ensuremath{\vdash}}
\def\lprovesnot{\ensuremath{\nvdash}}

%semantically provable
\def\lentails{\ensuremath{\vDash}}
\def\lentailsnot{\ensuremath{\nvDash}}

%empty set
\def\nullset{\ensuremath{\emptyset}}

%composition sign for generic sentential connective
\newcommand*{\comp}[1][]{\ensuremath{\otimes_{#1}}}

%Language L
\newcommand*\lL[1][]{\ensuremath{\mathcal{L}_{#1}}}

%blank as in "fill in the blank"
\newcommand*{\blank}{\underline{\hspace*{2.5em}}}

%\renewcommand{\phi}{\varphi}

%identity sign
\setlength{\medmuskip}{1mu}
\newcommand{\ident}[2]{#1\mathbin{=}#2}
\newcommand{\nident}[2]{#1\mathbin{\neq}#2}


\newcommand*{\conj}[1]{\ensuremath{\overline{#1}}}

% Sequent
\newcommand{\seq}[2]{#1 \lproves #2}

\newcommand{\seqA}[3][0.25]{\makebox[#1\textwidth][l]
 {\ensuremath{#2}} \makebox[1em]
{\lproves}\ \ensuremath{#3}}

\newcommand{\sqA}[4][0.25]{\makebox[#1\textwidth][l]
 {\ensuremath{#2}} \makebox[1em]
{\lproves}\ \ensuremath{#3}\explx{#4}}

\newcommand{\sqAs}[4][0.25]{\makebox[#1\textwidth][l]
 {\footnotesize{\ensuremath{#2}}} \makebox[1em]
{\lproves}\ \ensuremath{#3}\expl{#4}}

